<%= if @user == nil do %>
User does not exists
<% else %>
<div class="user-profile">
  <div class="user-sidebar">
    <img src="<%= @user.avatar %>" alt="<%= @user.name %>" class="user-profile-pic" />
    <h3><%= @user.name %></h3>
  </div>
  <div>
  <h4 style="text-align: center">User Projects</h4>
  <%= if @conn.assigns.current_user.username == @user.username do %>
    <a href="/projects/create"><button class="primary-button">New Project</button></a>
  <% end %>
  <div class="list-select-projects">
  <%= for project <- @user.projects do %>
    <a class="project-selection-individual" href=<%= "/project/#{project.id}" %>>
      <div class="project-selection-individual__name"><%= project.name %></div>
      <div class="project-selection-individual__stars"></div>
      <div class="project-selection-individual__description"><%= project.description %></div>
    </a>
  <% end %>
  </div>
  </div>
</div>
<% end %>